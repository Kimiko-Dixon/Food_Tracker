<body>
    <nav class="navbar is-white is-shadowless">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    <img src="../public/images/logo.png" alt="Logo">
                </a>
            </div>
            <div id="navMenu" class="navbar-menu">
                <div class="navbar-end">
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            Profile
                        </a>
                        <div class="navbar-dropdown is-right">
                            <a class="navbar-item" id="account-settings">
                                Account Settings
                            </a>
                            <a class="navbar-item" id="goal-settings">
                                Goal Settings
                            </a>
                            <a class="navbar-item" id="logout">
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Account Settings Modal -->
    <div id="account-settings-modal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">

            <header class="modal-card-head">
                <p class="modal-card-title has-text-weight-bold">Change Password</p>
                <button class="delete" aria-label="close"></button>
            </header>
            <section class="modal-card-body">
                <div class="field">
                    <label class="label">New Password</label>
                    <div class="control">
                        <input id="new-password" class="input" type="password" placeholder="Enter new password">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Verify Password</label>
                    <div class="control">
                        <input id="verify-password" class="input" type="password" placeholder="Verify new password">
                    </div>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button id="change-password-btn" class="button is-success">Change Password</button>
            </footer>
        </div>
    </div>

    <!-- Goal Settings Modal -->
    <div id="goal-settings-modal" class="modal ">
        <div class="modal-background"></div>
        <div class="modal-card ">
            <header class="modal-card-head ">
                <p class="modal-card-title has-text-weight-bold">Goal Settings</p>
                <button class="delete" aria-label="close"></button>
            </header>
            <section class="modal-card-body">
                <div class="field">
                    <label class="label">Current Weight</label>
                    <div class="control">
                        <input id="current-weight" class="input" type="number" placeholder="Enter current weight">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Weight Goal</label>
                    <div class="control">
                        <input id="weight-goal" class="input" type="number" placeholder="Enter weight goal">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Calorie Goal</label>
                    <div class="control">
                        <input id="calorie-goal" class="input" type="number" placeholder="Enter calorie goal">
                    </div>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-success">Save Changes</button>
            </footer>
        </div>
    </div>

    <div class="container">
        <div class="columns">
     
            <div class="column is-9.5">
                <section class="hero is-info welcome is-small">
                    <div class="hero-body">
                        <div class="container">
                            <h1 class="title">Hello, {{userInfo.username}}.</h1>
                            <h2 class="subtitle">I hope you are having a great day!</h2>
                        </div>
                    </div>
                </section>
                <section class="info-tiles">
                    <div class="tile is-ancestor has-text-centered">
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">Calories Goal</p>
                                <p class="subtitle" id="calorieGoal">{{calorieGoal}} cal</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">Calories Tracked</p>
                                <p class="subtitle" id="caloriesToday">{{caloriesToday}} cal</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">Calories Left</p>
                                <p class="subtitle" id="caloriesLeft">{{caloriesLeft}} cal</p>
                            </article>
                        </div>
                    </div>
                </section>
                <section class="container">
                    <div class="columns is-multiline">
                        <div class="column is-12 mt-6">
                            <div class="buttons">
                                <a href="food.html?meal=breakfast" class="button is-primary">Breakfast</a>
                                <a href="food.html?meal=lunch" class="button is-primary">Lunch</a>
                                <a href="food.html?meal=dinner" class="button is-primary">Dinner</a>
                            </div>
                        </div>
                        <div class="column is-12" id="breakfast-section">
                            <h2 class="title is-4">Breakfast</h2>
                            <table class="table is-fullwidth is-striped">
                             
                                <tbody  class="food-container is-fullwidth">
                                    <thead>
                                        <tr>
                                            <th>Food</th>
                                            <th>Protein (g)</th>
                                            <th>Fat (g)</th>
                                            <th>Carbs (g)</th>
                                        </tr>
                                    </thead>
                                </tbody>
                            </table>
                        </div>
                        <div class="column is-12" id="lunch-section">
                            <h2 class="title is-4">Lunch</h2>
                            <table class="table is-fullwidth is-striped">
                             
                                <tbody  class="food-container is-fullwidth">
                                    <thead>
                                        <tr>
                                            <th>Food</th>
                                            <th>Protein (g)</th>
                                            <th>Fat (g)</th>
                                            <th>Carbs (g)</th>
                                        </tr>
                                    </thead>
                                </tbody>
                            </table>
                        </div>
                        <div class="column is-12" id="dinner-section">
                            <h2 class="title is-4">Dinner</h2>
                            <table class="table is-fullwidth is-striped">
                             
                                <tbody  class="food-container is-fullwidth">
                                    <thead>
                                        <tr>
                                            <th>Food</th>
                                            <th>Protein (g)</th>
                                            <th>Fat (g)</th>
                                            <th>Carbs (g)</th>
                                        </tr>
                                    </thead>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
                <div id="amount-modal" class="modal">
                    <div class="modal-background"></div>
                    <div class="modal-card">
                        <header class="modal-card-head">
                            <p class="modal-card-title">Change Food Amount</p>
                            <button class="delete " aria-label="close"></button>
                        </header>
                        <section class="modal-card-body">
                            <div class="field">
                                <label class="label">Amount (grams)</label>
                                <div class="control">
                                    <input id="food-amount" class="input" type="number" placeholder="Enter amount" min="1">
                                </div>
                            </div>
                            <input type="hidden" id="modal-food-name">
                            <input type="hidden" id="modal-food-protein">
                            <input type="hidden" id="modal-food-fat">
                            <input type="hidden" id="modal-food-carbs">
                        </section>
                        <footer class="modal-card-foot">
                            <button id="submit-amount" class="button is-success">Update</button>
                        </footer>
                    </div>
                </div>
                
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <script async type="text/javascript" src="../js/bulma.js"></script>
      <script src="\js\homepage.js"></script>
</body>
